<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context=".bihu.MainBiHuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@color/colorBlue"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_bh_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/tv_bh_title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:gravity="center"
            android:text="B乎动态"
            android:textColor="#fff"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#00000000" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:background="#A3FFFFFF"
            android:id="@+id/rv_bh"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/ll_bh_qs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_bh_qs"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/qs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="发布问题"
                android:textColor="#fff"
                android:textSize="17sp" />

        </LinearLayout>

        <com.example.qq.MyImageView
            android:id="@+id/img_bh_bottom"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:src="@drawable/head_me"/>

        <LinearLayout

            android:id="@+id/ll_bh_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_bh_me"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/me" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我的主页"
                android:textColor="#fff"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>